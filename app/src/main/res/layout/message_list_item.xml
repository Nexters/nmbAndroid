<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93.3dp">

        <ImageView
            android:id="@+id/item_msg_box"
            android:layout_width="68.3dp"
            android:layout_height="68.3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="13.7dp"
            android:layout_marginTop="12.3dp"
            android:background="@drawable/msg_box_rect"
            android:padding="11.7dp" />

        <TextView
            android:id="@+id/item_msg_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.7dp"
            android:layout_toRightOf="@+id/item_msg_box"
            android:text="테스트"
            android:textColor="#474a4f"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_msg_subject"
            android:layout_marginTop="14.7dp"
            android:layout_marginEnd="34dp"
            android:layout_toRightOf="@+id/item_msg_box"
            android:ellipsize="end"
            android:lines="2"
            android:text="내용테스트테스트"
            android:textColor="#bbbfc4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="17.7dp"
            android:layout_marginTop="16.7dp"
            android:text="2016.08.01"
            android:textColor="#ec407a"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>