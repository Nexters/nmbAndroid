<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="73.3dp">

            <TextView
                android:id="@+id/txt_msg_content"
                android:layout_width="match_parent"
                android:layout_height="73.3dp"
                android:background="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/dialog_msg"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="8.3dp"
                android:layout_height="5.7dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/checkicon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_hope_msg"
            android:layout_width="match_parent"
            android:layout_height="46.7dp"
            android:background="@color/darkish_pink"
            android:gravity="center"
            android:text="메세지를 보고싶어요"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>