<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.nexters.naemambo.naemambo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="153dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img_main_box"
                android:layout_width="153dp"
                android:layout_height="218.7dp"
                android:layout_marginTop="88dp"
                android:src="@drawable/main_box" />

            <TextView
                android:id="@+id/txt_box_count"
                android:layout_width="23.3dp"
                android:layout_height="23.3dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="116dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/ballon"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_new_message"
            android:layout_width="173.3dp"
            android:layout_height="42.5dp"
            android:layout_below="@+id/layout1"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:src="@drawable/main_message" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="53.3dp"
                android:layout_height="53.3dp"
                android:layout_marginStart="53.3dp"
                android:layout_marginTop="26.7dp"
                android:src="@drawable/main_setting" />

            <ImageView
                android:id="@+id/btn_write"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/main_write" />

            <ImageView
                android:id="@+id/btn_user"
                android:layout_width="53.3dp"
                android:layout_height="53.3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="53.3dp"
                android:layout_marginTop="26.7dp"
                android:onClick="onClick"
                android:src="@drawable/main_user" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
