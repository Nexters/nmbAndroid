<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nexters.naemambo.naemambo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <ImageView
            android:id="@+id/img_main_box"
            android:layout_width="153dp"
            android:layout_height="218.7dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:src="@drawable/main_box" />

        <ImageView
            android:layout_width="173.3dp"
            android:layout_height="42.5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_main_box"
            android:src="@drawable/main_message" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/img_main_box"
            android:layout_marginTop="170dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_setting"
                android:layout_width="53.3dp"
                android:layout_height="53.3dp"
                android:layout_marginStart="53.3dp"
                android:layout_marginTop="26.7dp"
                android:src="@drawable/main_setting" />

            <ImageView
                android:id="@+id/btn_write"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/main_write" />

            <ImageView
                android:id="@+id/btn_user"
                android:layout_width="53.3dp"
                android:layout_height="53.3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="53.3dp"
                android:layout_marginTop="26.7dp"
                android:src="@drawable/main_user" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
