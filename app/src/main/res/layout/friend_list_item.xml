<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56.7dp">

        <ImageView
            android:id="@+id/img_profile_img"
            android:layout_width="36.7dp"
            android:layout_height="36.7dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ballon"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txt_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_profile_img"
            android:layout_centerVertical="true"
            android:text="이름이"
            android:textColor="#474a4f"
            android:textSize="16sp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/chk_friends"
            android:layout_width="23.7dp"
            android:button="@null"
            android:background="@drawable/selector_friends_chk"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="22dp"
            android:layout_height="23.7dp" />
    </RelativeLayout>
</LinearLayout>